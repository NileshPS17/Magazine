<?xml version="1.0" encoding="utf-8"?>
   <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="30dp"
    android:layout_height="150dp" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:elevation="6dp"
        android:background="@drawable/home_latest_item_shape"
        android:layout_height="144dp">


            <ImageView
                android:layout_width="150dp"
                android:layout_margin="3dp"
                android:elevation="6dp"
                android:id="@+id/home_list_item_articleImage"
                android:background="@color/colorAccent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:text="Title"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                style="@style/Home_list_item_text"
                android:layout_toRightOf="@+id/home_list_item_articleImage"
                android:id="@+id/home_list_item_title"
                android:textSize="25sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Author"
                android:layout_marginLeft="5dp"
                style="@style/Home_list_item_text"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/home_list_item_articleImage"
                android:id="@+id/home_list_item_author"
                android:layout_below="@+id/home_list_item_title"
                android:textSize="13sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Category"
                android:layout_marginLeft="5dp"
                style="@style/Home_list_item_text"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/home_list_item_articleImage"
                android:id="@+id/home_list_item_category"
                android:layout_below="@+id/home_list_item_author"
                android:textSize="13sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Time"
                android:layout_margin="10dp"
                style="@style/Home_list_item_text"
                android:gravity="right|bottom"
                android:layout_toRightOf="@+id/home_list_item_articleImage"
                android:id="@+id/home_list_item_date"
                android:layout_below="@+id/home_list_item_category"
                android:textSize="13sp"
                android:layout_height="match_parent" />

    </RelativeLayout>

</RelativeLayout>