<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_margin="5dp"
        android:elevation="5dp"
        android:id="@+id/cv"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/home_list_item_articleImage"
                android:fitsSystemWindows="true"
                android:elevation="3dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/home_list_item_title"
                android:text="Hello"
                android:layout_marginTop="150dp"
                android:textSize="30dp"
                android:paddingLeft="15dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#ffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_list_item_author"
                android:text="Author"
                android:layout_below="@+id/home_list_item_articleImage"
                android:textSize="20dp"
                android:paddingLeft="15dp"
                android:fontFamily="sans-serif"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_list_item_category"
                android:text=" Hejkerhhdllo"
                android:layout_below="@+id/home_list_item_author"
                android:textSize="20dp"
                android:paddingLeft="15dp"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_list_item_date"
                android:text="Hejkerhhdll"
                android:paddingRight="15dp"
                android:layout_below="@+id/home_list_item_author"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                android:fontFamily="sans-serif"
                android:textColor="#000"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>