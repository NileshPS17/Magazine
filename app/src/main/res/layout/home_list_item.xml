<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:elevation="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="?android:attr/selectableItemBackground"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#eeeeee"
        card_view:cardCornerRadius="2dp"
        android:id="@+id/cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



              <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/cheese_1"
                    android:id="@+id/home_list_item_articleImage"
                    android:scaleType="centerCrop" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/home_list_item_articleImage"
                android:id="@+id/home_list_item_title"
                android:text="Title is Good"
                android:padding="12dp"
                android:textSize="30dp"
                android:gravity="left|bottom"
                android:layout_alignLeft="@+id/home_list_item_category"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#fff"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_list_item_author"
                android:text="Author"
                android:layout_below="@id/home_list_item_articleImage"
                android:textSize="20dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_list_item_category"
                android:text="Category"
                android:layout_below="@+id/home_list_item_author"
                android:textSize="20dp"
                android:paddingLeft="15dp"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_list_item_date"
                android:text="Date"
                android:paddingRight="15dp"
                android:layout_below="@+id/home_list_item_author"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                android:fontFamily="sans-serif"
                android:textColor="#000"/>
        </RelativeLayout>
</android.support.v7.widget.CardView>

</FrameLayout>