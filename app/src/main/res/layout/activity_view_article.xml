<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context="com.cloudfoyo.magazine.ViewArticleActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F44336"
        android:elevation="5dp"
        android:title=""
        android:titleTextColor="#ffff"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:id="@+id/toolbar1"
        android:layout_alignParentTop="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="25dp"
                android:background="#F44336"
                android:textColor="#ffff"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:layout_marginLeft="60dp"
                android:id="@+id/title"/>
            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/back_button"
                android:src="@drawable/back"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:scaleType="fitXY"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:onClick="back"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <se.emilsjolander.flipview.FlipView
        xmlns:flipview="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar1"
        android:id="@+id/flip_view"
        android:layout_marginBottom="45dp"
        flipview:orientation="horizontal"
        flipview:overFlipMode="glow" />



    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/toolbar2"
        android:elevation="5dp"
        android:layout_alignParentBottom="true"
        android:background="#F44336">
        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginLeft="110dp"
            style="@style/toggleButton"
            android:background="@drawable/ic_toggle_bg"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/share"
            android:src="@drawable/share"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/toggleButton"
            android:layout_marginLeft="50dp"
            android:background="@null"
            />

    </android.support.v7.widget.Toolbar>

</RelativeLayout>
